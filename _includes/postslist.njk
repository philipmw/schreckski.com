<ol reversed class="newslist" style="--postlist-index: {{ (postslistCounter or postslist.length) + 1 }}">
{%- for post in postslist | reverse %}
  <li class="newslist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <time class="newsitem-date newsitem-month-{{ post.date | readableDate("MM") }}"
           datetime="{{ post.date | htmlDateString }}">
      {{ post.date | readableDate("LLL yyyy") }}</time>
    <a href="{{ post.url }}" class="newslist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
  </li>
{%- endfor %}
</ol>